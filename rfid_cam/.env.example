# =====================================
# Pet Chip Reader Configuration v2.1.0
# =====================================
# Copy this to .env and customize for your environment
# IMPORTANT: Never commit .env files with real credentials!

# =====================================
# AI ANIMAL IDENTIFICATION (Optional)
# =====================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here
ANIMAL_IDENTIFICATION=true

# =====================================
# HARDWARE CONFIGURATION
# =====================================
# Serial port for RBC-A04 pet chip reader
PORT=/dev/ttyUSB1
BAUD=9600
POLL_ADDR=01
POLL_FMT=D
POLL_INTERVAL=0.5
DEDUPE_SECONDS=2

# =====================================
# GPS CONFIGURATION (Optional)
# =====================================
# Enable GPS tracking with USB GPS dongle
GPS_ENABLED=false
GPS_PORT=/dev/ttyUSB0
GPS_BAUD=9600
GPS_TIMEOUT=5.0

# =====================================
# IMAGE METADATA CONFIGURATION
# =====================================
# Embed comprehensive metadata in captured images
EMBED_METADATA=true
SAVE_METADATA_JSON=true
METADATA_QUALITY=high

# =====================================
# PHOTO CAPTURE SETTINGS
# =====================================
CAPTURE_ON_ANY=true
LOST_TAG=123456789012345
NOTIFY_ON_ANY=true
PHOTO_DIR=/home/collins/rfid_photos

# =====================================
# INTELLIGENT BATCHING SYSTEM
# =====================================
BATCH_DELAY_MINUTES=0.5
ENCOUNTER_WINDOW_MINUTES=30
MAX_PHOTOS_PER_BATCH=5

# =====================================
# IMMEDIATE NOTIFICATIONS
# =====================================
IMMEDIATE_NOTIFICATION=true
LOCAL_BACKUP_RETRY=true

# =====================================
# CLOUD STORAGE (Optional)
# =====================================
# Configure with: rclone config
RCLONE_REMOTE=gdrive
RCLONE_PATH=rfid_photos

# =====================================
# SMS NOTIFICATIONS (Optional)
# =====================================
# Get credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
ALERT_TO_SMS=+1987654321

# =====================================
# EMAIL NOTIFICATIONS (Recommended)
# =====================================
# For Gmail: Enable 2FA and create App Password
# https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password
EMAIL_FROM=your_email@gmail.com

# For SMS via email gateway (no subject line):
# Verizon: number@vtext.com
# AT&T: number@txt.att.net  
# T-Mobile: number@tmomail.net
# Google Fi: number@msg.fi.google.com
ALERT_TO_EMAIL=1234567890@msg.fi.google.com

# =====================================
# RESILIENCE CONFIGURATION
# =====================================
# Fallback message when AI analysis fails or is unavailable
AI_FALLBACK_MESSAGE=AI analysis not available

# Smart Digest System for Large Notification Backlogs
DIGEST_THRESHOLD=10
DIGEST_MAX_AGE_HOURS=48
DIGEST_MAX_PHOTOS_PER_CHIP=3

# Daily Digest Configuration
DAILY_DIGEST_ENABLED=true
DAILY_DIGEST_TIME=18:00
DIGEST_EMAIL=dccollins@gmail.com